<div class="max-w-3xl mx-auto space-y-6">

  <!-- Page Title -->
  <h1 class="text-3xl font-bold text-gray-900"><%= pluralize @users.count, "User" %></h1>

  <!-- Users List -->
  <div class="space-y-4">
    <% @users.each do |user| %>
      <div class="bg-white shadow rounded-lg p-4 hover:shadow-md transition-shadow flex justify-between items-center">
        <%= link_to user.full_name, store_user_path(user),
            class: "text-gray-900 font-medium hover:text-blue-600" %>
        <span class="text-gray-500 text-sm"><%= user.email_address %></span>
      </div>
    <% end %>
  </div>

</div>
