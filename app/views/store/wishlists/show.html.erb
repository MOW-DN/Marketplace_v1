<div class="max-w-3xl mx-auto space-y-6">

  <!-- Wishlist Title -->
  <h1 class="text-3xl font-bold text-gray-900"><%= @wishlist.name %></h1>

  <!-- Owner Info -->
  <p class="text-gray-700">
    By
    <%= link_to @wishlist.user.full_name, store_user_path(@wishlist.user),
        class: "text-blue-600 hover:underline font-medium" %>
  </p>

  <!-- Products in Wishlist -->
  <div class="space-y-4">
    <h3 class="text-xl font-semibold text-gray-900">
      <%= pluralize(@wishlist.products_count, "Product") %>
    </h3>

    <% @wishlist.wishlist_products.includes(:product).each do |it| %>
      <div class="bg-white shadow rounded-lg p-4 flex flex-col md:flex-row md:justify-between md:items-center">
        <%= link_to it.product.name, store_product_path(it.product),
            class: "text-gray-900 font-medium hover:text-blue-600" %>
        <small class="text-gray-500 mt-1 md:mt-0">
          Added <%= l it.created_at, format: :long %>
        </small>
      </div>
    <% end %>
  </div>

</div>
