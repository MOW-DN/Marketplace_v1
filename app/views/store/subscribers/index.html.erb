<div class="max-w-3xl mx-auto space-y-6">

  <!-- Page Title -->
  <h1 class="text-3xl font-bold text-gray-900"><%= pluralize @subscribers.count, "Subscriber" %></h1>

  <!-- Filter Form -->
  <div class="bg-white shadow-md rounded-lg p-4">
    <%= form_with url: store_subscribers_path, method: :get, class: "flex flex-col md:flex-row md:items-end gap-4" do |form| %>

      <div class="flex-1">
        <%= form.label :product_id, "Filter by Product",
              class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.collection_select :product_id,
              Product.all,
              :id,
              :name,
              { selected: params[:product_id], include_blank: "All Products" },
              class: "w-full border border-gray-300 rounded-lg p-2
                     focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div>
        <%= form.submit "Filter",
              class: "w-full md:w-auto bg-blue-600 text-white py-2 px-4 rounded-lg font-medium
                     hover:bg-blue-700 transition-colors cursor-pointer" %>
      </div>

    <% end %>
  </div>

  <!-- Subscribers List -->
  <div class="space-y-4">
    <%= render @subscribers %>
  </div>

</div>
