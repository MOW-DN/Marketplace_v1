<h1 class="text-3xl font-bold text-gray-900 mb-6">Edit Product</h1>

<div class="bg-white shadow-md rounded-lg p-6 max-w-2xl space-y-4">

  <!-- Product Form -->
  <%= render "form", product: @product %>

  <!-- Cancel Link -->
  <div class="mt-4">
    <%= link_to "Cancel",
        store_product_path(@product),
        class: "text-gray-600 hover:text-gray-800 underline" %>
  </div>

</div>
