<%= form_with model: @wishlist, class: "max-w-md mx-auto space-y-6" do |form| %>

  <!-- Error Messages -->
  <% if form.object.errors.any? %>
    <div class="bg-red-100 text-red-800 p-3 rounded-lg">
      <%= form.object.errors.full_messages.to_sentence %>
    </div>
  <% end %>

  <!-- Wishlist Name -->
  <div>
    <%= form.label :name, "Wishlist Name",
          class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :name,
          class: "w-full border border-gray-300 rounded-lg p-2
                 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <!-- Actions -->
  <div class="flex gap-4">
    <%= form.submit form.object.persisted? ? "Update Wishlist" : "Create Wishlist",
          class: "bg-blue-600 text-white px-4 py-2 rounded-lg font-medium
                 hover:bg-blue-700 transition-colors cursor-pointer" %>

    <%= link_to "Cancel",
          form.object.persisted? ? store_wishlist_path(form.object) : wishlists_path,
          class: "bg-gray-300 text-gray-800 px-4 py-2 rounded-lg hover:bg-gray-400 transition" %>
  </div>

<% end %>
